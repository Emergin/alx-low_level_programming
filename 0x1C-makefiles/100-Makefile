# make -f 100 makefile executable deletes and recompilation

CC = gcc
OBJ = $(SRC:.c=.o)
NAME = School
SRC = main.c School.c
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

clean:
	$(RM) *~$(NAME)

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

fclean: clean oclean

oclean:
	$(RM) $(OBJ)

re: oclean all
