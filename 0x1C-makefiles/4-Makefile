# A complete makefile 

CC = gcc 
OBJ = $(SRC:.c=.o)
NAME = School
SRC = main.c School.c
CFLAGS = -Wall -Werror -Wextra -pedantic 
RM = rm -f

all: $(OBJ)
	$(CC) $? -o $(NAME)

clean:
	$(RM) *~$(NAME)

fclean: clean oclean

oclean:
	$(RM) $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

re: oclean all
